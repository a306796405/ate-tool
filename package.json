{
  "name": "eslint-vite-project",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "test:unit": "vitest",
    "bootstrap": "pnpm install",
    "lint": "pnpm lint:eslint && pnpm lint:prettier && pnpm lint:stylelint",
    "lint:eslint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "lint:prettier": "prettier --write  \"{apps,packages}/**/*.{js,json,tsx,css,less,scss,vue,html,md}\"",
    "lint:stylelint": "stylelint --cache --fix \"**/*.{vue,less,postcss,css,scss}\" --cache --cache-location node_modules/.cache/stylelint/",
    "lint:lint-staged": "lint-staged",
    "prepare": "husky",
    "preinstall": "npx only-allow pnpm",
    "release": "git push && git push origin --tags",
    "clean:cache": "npx rimraf node_modules/.cache/ && npx rimraf node_modules/.vite",
    "clean:lib": "npx rimraf node_modules apps/*/node_modules",
    "reinstall": "rimraf pnpm-lock.yaml && rimraf package.lock.json && pnpm clean:lib && npm run bootstrap",
    "gen:changelog": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "push": "git add -A && czg && git push",
    "commit": "git add -A && czg",
    "check": "pnpm --filter=./apps/* type-check",
    "dev": "pnpm clean:dist && npx run-p dev:view dev:ext",
    "dev:ext": "pnpm -F ate-tool-ext watch",
    "dev:view": "pnpm -F ate-tool-view watch",
    "dev:common": "pnpm -F @hf/ate-tool-common watch",
    "clean:dist": "rimraf apps/ate-tool-ext/dist",
    "package": "pnpm run -F ate-tool-ext package"
  },
  "dependencies": {
    "@hf/ate-tool-common": "workspace:*",
    "@vueuse/core": "~10.9.0",
    "dayjs": "~1.11.10",
    "pinia": "^2.1.7",
    "vscode-messenger": "^0.4.5",
    "vscode-messenger-common": "^0.4.5",
    "vscode-messenger-webview": "^0.4.5",
    "vue": "^3.4.21",
    "vue-router": "^4.3.0",
    "path-browserify": "^1.0.1"
  },
  "devDependencies": {
    "@types/path-browserify": "^1.0.2",
    "@rushstack/eslint-patch": "^1.3.3",
    "@tsconfig/node20": "^20.1.2",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^20.11.28",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-vue": "^9.9.0",
    "prettier": "^2.8.4",
    "prettier-plugin-tailwindcss": "^0.2.3",
    "commitizen": "^4.3.0",
    "commitlint": "^19.2.1",
    "czg": "^1.8.0",
    "git-cz": "^4.9.0",
    "husky": "~9.0.11",
    "jsdom": "^24.0.0",
    "lint-staged": "~15.2.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "~5.0.5",
    "stylelint": "~16.3.1",
    "stylelint-config-property-sort-order-smacss": "^10.0.0",
    "stylelint-config-recommended": "~14.0.0",
    "stylelint-config-recommended-vue": "~1.5.0",
    "stylelint-config-standard": "~36.0.0",
    "stylelint-order": "~6.0.4",
    "stylelint-prettier": "^5.0.0",
    "typescript": "^5.4.4",
    "vite": "^5.2.0",
    "vue-tsc": "^2.0.6",
    "vite-plugin-dts": "^3.8.1",
    "vite-plugin-vue-devtools": "^7.0.18",
    "vitest": "^1.4.0",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vitejs/plugin-vue-jsx": "^3.1.0"
  }
}
